<% layout('layouts/boilerplate') %>
    <div class="row">
        <h2 class="text-center mb-4">Student Profile</h2>
        <div class="col-8 offset-2">
            <div class="row mb-2">
                <label for="name" class="col-sm-3 col-form-label">Name</label>
                <div class="col-sm-9">
                    <h1 class="form-control" id="name" readonly>
                        <%= student.name %>
                    </h1>
                </div>
            </div>
            <div class="row mb-2">
                <label for="batchno" class="col-sm-3 col-form-label">Batch Number</label>
                <div class="col-sm-9">
                    <h1 class="form-control" id="batchno" readonly>
                        <%= student.batchno %>
                    </h1>
                </div>
            </div>
            <div class="row mb-2">
                <label for="department" class="col-sm-3 col-form-label">Department</label>
                <div class="col-sm-9">
                    <h1 class="form-control" id="department" readonly>
                        <%= student.department %>
                    </h1>
                </div>
            </div>
            <div class="row mb-2">
                <label for="address" class="col-sm-3 col-form-label">Address</label>
                <div class="col-sm-9">
                    <h1 class="form-control" id="address" readonly>
                        <%= student.address %>
                    </h1>
                </div>
            </div>
            <div class="row mb-2">
                <label for="dob" class="col-sm-3 col-form-label">Date of Birth</label>
                <div class="col-sm-9">
                    <h1 class="form-control" id="dob" readonly>
                        <%= student.dob.toISOString().slice(0, 10) %>
                    </h1>
                </div>
            </div>
            <div class="row mb-2">
                <label for="gender" class="col-sm-3 col-form-label">Gender</label>
                <div class="col-sm-9">
                    <h1 class="form-control" id="gender" readonly>
                        <%= student.gender %>
                    </h1>
                </div>
            </div>
            <div class="row mb-2">
                <label for="department" class="col-sm-3 col-form-label">Admission Number</label>
                <div class="col-sm-9">
                    <h1 class="form-control" id="admissionNumber" readonly>
                        <%= student.admissionNumber %>
                    </h1>
                </div>
            </div>
            <div class="row mb-2">
                <label for="mobileNumber" class="col-sm-3 col-form-label">Mobile Number</label>
                <div class="col-sm-9">
                    <h1 class="form-control" id="mobileNumber" readonly>
                        <%= student.mobileNumber %>
                    </h1>
                </div>
            </div>
            <div class="row mb-2">
                <label for="attendance" class="col-sm-3 col-form-label">Attendance</label>
                <div class="col-sm-9">
                    <h1 class="form-control" id="attendance" readonly>
                        <%= student.attendance %>%
                    </h1>
                </div>
            </div>
            <div class="row mb-2">
                <label for="eventName" class="col-sm-3 col-form-label">Event Name</label>
                <div class="col-sm-9">
                    <h1 class="form-control" id="eventName" readonly>
                        <%= student.eventName %>
                    </h1>
                </div>
            </div>
            <div class="row mb-2">
                <label for="eventDate" class="col-sm-3 col-form-label">Event Date</label>
                <div class="col-sm-9">
                    <h1 class="form-control" id="eventDate" readonly>
                        <%= student.eventDate.toISOString().slice(0, 10) %>
                    </h1>
                </div>
            </div>
            <div class="card">
                <div class="card-header text-center">
                    <label for="mark" class="col-sm-3 col-form-label">Mark</label>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <label for="subject1" class="col-sm-5 col-form-label">
                            <%= student.subject1 %>
                        </label>
                        <div class="col-sm-7">
                            <h1 class="form-control" id="subject1" readonly>
                                <%= student.mark1 %>
                            </h1>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label for="subject2" class="col-sm-5 col-form-label">
                            <%= student.subject2 %>
                        </label>
                        <div class="col-sm-7">
                            <h1 class="form-control" id="subject1" readonly>
                                <%= student.mark2 %>
                            </h1>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label for="subject3" class="col-sm-5 col-form-label">
                            <%= student.subject3 %>
                        </label>
                        <div class="col-sm-7">
                            <h1 class="form-control" id="subject3" readonly>
                                <%= student.mark3 %>
                            </h1>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label for="subject4" class="col-sm-5 col-form-label">
                            <%= student.subject4 %>
                        </label>
                        <div class="col-sm-7">
                            <h1 class="form-control" id="subject4" readonly>
                                <%= student.mark4 %>
                            </h1>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label for="subject5" class="col-sm-5 col-form-label">
                            <%= student.subject5 %>
                        </label>
                        <div class="col-sm-7">
                            <h1 class="form-control" id="subject5" readonly>
                                <%= student.mark5 %>
                            </h1>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label for="subject6" class="col-sm-5 col-form-label">
                            <%= student.subject6 %>
                        </label>
                        <div class="col-sm-7">
                            <h1 class="form-control" id="subject6" readonly>
                                <%= student.mark6 %>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>